            %li Convert your internet ID into NFT
            %li Put domain configuration to blockchain
            %li Build bridges between old software and new technologies
        %section
          %h2 Implement it in one day

          %pre
            %code.solidity
              :preserve
                contract IRegistry is IERC721 {
                  function set(key, value, tokenId);
                  function get(key, tokenId) returns (string);
                }

        %section
          %h2 Resolution Algorithm
          %img{src: "https://api.monosnap.com/file/download?id=grkQNqNj5powY7GltCNL4eVRJ58LQZ"}
          %ul
            %li User puts example.crypto in a browser
            %li.fragment
              Browser sends DNS request 
              %ul
                %li.grey type: A name: example.crypto
              
            %li.fragment
              The gateway sends request on chain
              %ul.grey
                %li Registry.get("dns.A", hash("example.crypto"))
                %li Registry.get("dns.A.ttl", hash("example.crypto"))
            %li.fragment
              Gateway sends response to the browser
              %ul.grey
                %li value: 192.168.0.1, ttl: 128
        
        %section
          %h2 Decentralized Content Storage
          %h3 like IPFS

          %ul
            %li Put content to network
            %li Receive ID (hash) of your content
            %li Configure your domain to have that ID
          %pre.fragment
            %code.javascript
              :preserve
                Registry.set(
                  "dweb.IPFS.hash", 
                  "QmXHHUN57Arn3Lo25qyFV6L52gSb7XgDswfAkxe1KkL8pr",
                  hash('example.crypto')
                );

        %section
          %h2 Realistic Decentralization

          %ul
            %li.fragment Putting data on chain is expensive
            %li.fragment Content storage motivation is not solved
            %li.fragment Dynamic content is not even a thing
